/*
Given the size of an array which is 10, and the elements such as 19, 3, 15, 7, 11, 9, 13, 5, 17 and 1, 
create a program that will display the following output:
 
Element     Value     Histogram

      0       	19    *******************

      1       	3     ***

      2      	15    ***************

      3      	7     *******

      4     	11    ************

      5    		9     *********

      6     	13    *************

      7     	5     *****

      8			17    *****************

      9			1     *

*/
 
#include<iostream>
		using namespace std;
			
		int main()
			{
				int values[]={19, 3, 15, 7, 11, 9, 13, 5, 17, 1};
				int size=sizeof(values) / sizeof(values[0]);
				
				cout<<"Element\tValue\tHistogram"<<endl;
				
				for (int i=0 ; i < size;i++) 
					{
						cout<<i<<"\t"<<values[i]<<"\t";
						
						for (int s=0; s<values[i]; s++)
						{
							cout<<"*";
						}
					cout<<endl;
				}

	return 0;			
}
